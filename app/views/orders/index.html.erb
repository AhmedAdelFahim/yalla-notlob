<div >
  <div class="table-stats order-table ov-h">
    <table class="table ">
      <thead>
      <tr>
        <!--        <th class="serial">#</th>-->
        <th>Order</th>
        <th>Restaurant</th>
        <th>Invited</th>
        <th>Joined</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <tr>
        <!--        <td class="serial">1.</td>-->
        <% @orders.each do |order| %>
          <td>
            <%= order.order_type %>
          </td>
          <td> <%= order.restaurant %></td>
          <td> <%= order.invited_num %></td>
          <td> <%= order.joined_num %></td>
          <td> <%= order.status %></td>
          <td>
            <button type="button" class="btn btn-primary btn-sm">View</button>
            <% if order.status == "waiting" %>
<!--              <button type="button" class="btn btn-success btn-sm">Finish</button>-->
              <% if order.user_id == current_user.id %>
                <%= link_to "Finish", update_state_url(order.id,status:'finished'), method: :put, class:"btn btn-success btn-sm"%>
                <%= link_to "Cancel", update_state_url(order.id,status:'cancelled'), method: :put, class:"btn btn-danger btn-sm"%>
              <% end %>
            <% end %>
          </td>

          </tr>
        <% end %>
        </tbody>
    </table>
  </div> <!-- /.table-stats -->
  <%#= pagy_nav(@pagy) %>
<%#= pagy_bulma_nav(@pagy).html_safe %>
  <div id="my-container-orders">
    <%= pagy_bootstrap_nav(@pagy).html_safe %>
  </div>
</div>

