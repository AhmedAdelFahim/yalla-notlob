<h2>User Joined Orders</h2>
<p id="notice"><%= notice %></p>
<style>
.table-wrap {
  height: 400px;
  overflow-y: auto;
}
</style>
<div class="table-wrap">
  <div class="table-stats order-table ov-h">
    <table class="table ">
      <thead>
      <tr>
        <th>Person</th>
       
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <tr>
<% @user_joined_order.each do |user| %>
    <tr> 
    <td><%= label_tag 'person', User.where("id = ?", user.user_id).first.name %></td>
    <td>
    <%= link_to  "Remove" , "/user_join_orders/#{user.id}", method: :delete, class:"btn btn-danger btn-sm" , data: { confirm: 'Are you sure?' }%>

    </td>
    
  <% end %>
  </tr>
  </tbody>
  </table>

</div>
</div>
<%= link_to 'Back', {:controller => "order_items", :action => "index", :order_id => @orders.id} %> 
